# RAILS_ENV is set to production in the image, so set the following in
# order to serve files out of the public HTML directory
RAILS_SERVE_STATIC_FILES=true

# Set AL_AUTHN to disable IU CAS authentication
AL_AUTHN=database

# Use a mocked up version of the ArchiveSpace export site in ./public/as_export
# Must create the mocked content using: rails g archives_online:mock_aspace
ASPACE_EXPORT_URL=http://localhost:3000/as_export/

# SOLR_URL=http://localhost:8983/solr

# ArcLight allows overriding the location of the repo config file.
# Default is ./config/repositories.yml
# REPOSITORY_FILE=

# Database default is sqlite3 at ./db/development.sqlite3
# DB_ADAPTER=mysql2
# MYSQL_DATABASE=
# MYSQL_HOST=
# MYSQL_USER=
# MYSQL_PASSWORD=

# Controls how Rails sends email
# SMTP_ADDRESS=
# SMTP_SSL_VERIFY=
# SMTP_PORT=25
# SMTP_SENDER=

# Controls how some methods get site context
# SITE_URL=
# SITE_HOST=
# SITE_PROTOCOL=