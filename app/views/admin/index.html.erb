<div class="container">
  <div class="row">
    <div class="col-md-12">
      <ul class="nav nav-tabs nav-fill" id="adminTab" role="tablist">
        <li class="nav-item flex-fill">
          <a class="nav-link active" id="manage-repositories-tab" data-toggle="tab" href="#manage-repositories" role="tab" aria-controls="manage-repositories" aria-selected="true">Manage Repositories</a>
        </li>
        <%# if current_user.admin? %>
        <li class="nav-item flex-fill">
          <a class="nav-link" id="manage-users-tab" data-toggle="tab" href="#manage-users" role="tab" aria-controls="manage-users" aria-selected="false">Manage Users</a>
        </li>
        <%# end %>
      </ul>
      <div class="tab-content" id="adminTabContent">
        <div class="tab-pane fade show active" id="manage-repositories" role="tabpanel" aria-labelledby="manage-repositories-tab">
          <h3>Manage Repositories</h3>
          <% if current_user.admin? %>
            <div class="row col">
              <%= link_to "Index all EADs for all repositories", index_eads_url, remote: true, class: "btn btn-lg btn-primary mt-4 mb-4" %>
            </div>
          <% end %>
        
          <div class="row mb-1">
            <div class="col-md-9">
              <h4>Repositories</h4>
            </div> 
          </div>
          <% @repositories.each do |key, value| %>
            <div class="row mt-2 pt-4 border-top">
              <div class="col-md-9">
                <h5><%= value[:name] %></h5>
              </div>
              <div class="col-md-3">
                <%= link_to "Index all EADs in this repository", index_repository_url(repository: key), remote: true, class: 'btn btn-primary' %>
              </div>
            </div>
            <div class="row pb-4">
              <div class="col-md-12">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Eads in this Repository</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% value[:eads].each do |ead| %>
                      <tr>
                        <td><%= ead %></td>
                        <td>
                          <%= link_to "Index", index_ead_url(repository: key, ead: ead),  remote: true, class: 'btn btn-sm btn-primary' %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          <% end %>
        </div>
        <%# if current_user.admin? %>
        <div class="tab-pane fade" id="manage-users" role="tabpanel" aria-labelledby="manage-users-tab">
          <h3>Manage Users</h3>
          <% if current_user.admin?%>
            <div class="row col">
              <%= link_to "Invite a new user", new_user_invitation_path, class: "btn btn-lg btn-primary mt-4 mb-4"%>
            </div>
          <% end %>
          <div class="row">
            <div class="col-md-12">
              <table class="table">
                <thead>
                  <tr>
                    <th>User</th>
                    <th>Role</th>
                    <th>Repositories</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td><%= user.email%></td>
                      <td><%= user.role %></td>
                      <td>
                        <% if user.repositories.present? %>
                          <% user.repositories.each do |r| %>
                            <%= r.name %><br/>
                          <% end %>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to "Delete", admin_delete_user_path(user), class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>
                        <% if user.role == "admin"%>
                          <%= link_to "Make Manager", admin_update_user_role_path(user), class: 'btn btn-primary btn-xs' %>
                        <% else %>
                          <%= link_to "Make Admin", admin_update_user_role_path(user), class: 'btn btn-primary btn-xs' %>
                        <% end %>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#update-repositories">
                          Update User Repositories
                        </button>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <%# end %>
      </div>
    </div>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="update-repositories" tabindex="-1" role="dialog" aria-labelledby="udpate-repositories-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="update-repositories-label">Update User Repositories</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <%#= form_for @user.last do |f| %>
          <div class="modal-body">
            <%#= f.text_field :title, class: 'form-control' %>
            ... form here
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%#= f.button :submit, :class => 'btn btn-primary' %>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        <%# end %>
      </div>
    </div>
  </div>
  
  <div class="row col mt-4">
    <%= link_to t('blacklight.header_links.logout'), destroy_user_session_path %>
  </div>
</div>