<!--overriding from arclight 0.3.1 to remove devise and add IU header branding_bar, from https://assets.iu.edu/brand/3.2.x/header-iu.html -->
<header>
  <%= render '/layouts/branding_bar' %>
  <%# ADD IU BRANDING AND REMOVE BLACK NAVBAR %>

  <% if controller_name == 'catalog' && !has_search_parameters? && action_name == 'index' %>
    <div class='al-homepage-masthead jumbotron'>
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-8 masthead-center" >
            <%= link_to t('arclight.masthead_heading'), root_path, class: 'h1' %>
          </div>

          <div class="col-md-4 nav-links d-flex justify-content-end" role="navigation">
            <ul class="navbar-nav" aria-label="browse">
              <%= render 'shared/main_menu_links' %>
            </ul>
          </div>
        </div>

        <div class='row justify-content-md-center'>
          <div class='col-12'>
            <div class='navbar-search'>
              <%= render_search_bar %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class='bg-faded al-masthead'>
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-8" >
            <%= link_to t('arclight.masthead_heading'), root_path, class: 'h1' %>
          </div>

          <div class="col-md-4 nav-links d-flex justify-content-end" role="navigation">
            <ul class="navbar-nav" aria-label="browse">
              <%= render 'shared/main_menu_links' %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="navbar-search navbar">
      <div class="<%= container_classes %>">
        <%= render_search_bar  %>
      </div>
    </div>
  <% end %>
</header>
